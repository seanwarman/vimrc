#!/bin/bash

bindings="ctrl-e:preview-down,ctrl-y:preview-up,ctrl-d:preview-page-down,ctrl-u:preview-page-up" 

function fuzd () {
  jumpline=`tac ~/.vim/tmp/jumps | fzf --delimiter="\s+" --ansi --layout=reverse --header=$PWD --bind="$bindings" --border=rounded`

  if [[ $jumpline ]]; then

    tmux send -t! ':exe "norm ' $(echo $jumpline | awk '{print $1}') '\<c-o>"' Enter

  fi
  exit
}

fuzd "$1"
